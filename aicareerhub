    <!-- JAVASCRIPT -->
    <script>
        // Current language
        var currentLang = 'en';
        
        // === LANGUAGE SWITCHER ===
        function switchLang(lang) {
            currentLang = lang;
            
            // Update button states
            var enBtn = document.getElementById('lang-en');
            var deBtn = document.getElementById('lang-de');
            
            if (lang === 'en') {
                enBtn.classList.add('active');
                deBtn.classList.remove('active');
            } else {
                deBtn.classList.add('active');
                enBtn.classList.remove('active');
            }
            
            // Update all elements with data-en and data-de attributes
            var elements = document.querySelectorAll('[data-en]');
            for (var i = 0; i < elements.length; i++) {
                var element = elements[i];
                var text = lang === 'en' ? element.getAttribute('data-en') : element.getAttribute('data-de');
                
                if (text) {
                    // For input fields and textareas
                    if (element.tagName === 'INPUT' || element.tagName === 'TEXTAREA') {
                        element.placeholder = text;
                    } 
                    // For buttons
                    else if (element.tagName === 'BUTTON') {
                        element.textContent = text;
                    }
                    // For all other elements
                    else {
                        element.textContent = text;
                    }
                }
            }
        }
        
        // === HAMBURGER MENU ===
        function toggleMenu() {
            var navCenter = document.getElementById('navCenter');
            var hamburger = document.getElementById('hamburger');
            
            if (navCenter.classList.contains('active')) {
                navCenter.classList.remove('active');
                hamburger.classList.remove('active');
            } else {
                navCenter.classList.add('active');
                hamburger.classList.add('active');
            }
        }
        
        function closeMenu() {
            var navCenter = document.getElementById('navCenter');
            var hamburger = document.getElementById('hamburger');
            navCenter.classList.remove('active');
            hamburger.classList.remove('active');
        }
        
        // === PAGE NAVIGATION ===
        function showPage(pageName) {
            // Hide all pages
            var pages = ['home', 'working', 'internship', 'thesis', 'fulltime'];
            for (var i = 0; i < pages.length; i++) {
                var pageElement = document.getElementById('page-' + pages[i]);
                if (pageElement) {
                    pageElement.classList.add('hidden');
                }
            }
            
            // Show requested page
            var targetPage = document.getElementById('page-' + pageName);
            if (targetPage) {
                targetPage.classList.remove('hidden');
            }
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            // Close mobile menu
            closeMenu();
        }
        
        // === SCROLL TO SECTION (for navigation) ===
        function scrollToSection(sectionId) {
            // First check if we're on home page
            var homePage = document.getElementById('page-home');
            
            if (!homePage.classList.contains('hidden')) {
                // We're on home page, just scroll
                var section = document.getElementById(sectionId);
                if (section) {
                    section.scrollIntoView({ behavior: 'smooth' });
                }
            } else {
                // We're on another page, go to home first
                showPage('home');
                setTimeout(function() {
                    var section = document.getElementById(sectionId);
                    if (section) {
                        section.scrollIntoView({ behavior: 'smooth' });
                    }
                }, 300);
            }
            
            closeMenu();
        }
        
        // === PROMPTS TOGGLE ===
        function togglePrompts(containerId, button) {
            var container = document.getElementById(containerId);
            var buttonText = button.querySelector('span');
            
            if (container) {
                if (container.classList.contains('active')) {
                    container.classList.remove('active');
                    if (currentLang === 'en') {
                        buttonText.textContent = 'View AI Prompts';
                    } else {
                        buttonText.textContent = 'KI-Prompts Anzeigen';
                    }
                } else {
                    container.classList.add('active');
                    if (currentLang === 'en') {
                        buttonText.textContent = 'Hide AI Prompts';
                    } else {
                        buttonText.textContent = 'KI-Prompts Verbergen';
                    }
                }
            }
        }
        
        // === MODAL FUNCTIONS ===
        function openModal() {
            document.getElementById('privacy-modal').style.display = 'block';
        }
        
        function closeModal() {
            document.getElementById('privacy-modal').style.display = 'none';
        }
        
        // Close modal when clicking outside
        window.onclick = function(event) {
            var modal = document.getElementById('privacy-modal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
        
        // === FORM SUBMISSION ===
        function handleSubmit(event) {
            event.preventDefault();
            
            var formMessage = document.getElementById('form-message');
            formMessage.className = 'form-message success';
            
            if (currentLang === 'en') {
                formMessage.textContent = 'Thank you for your message! We will get back to you soon.';
            } else {
                formMessage.textContent = 'Vielen Dank f√ºr Ihre Nachricht! Wir werden uns bald bei Ihnen melden.';
            }
            
            // Reset form
            document.getElementById('contact-form').reset();
            
            return false;
        }
        
        // === WHATSAPP BROWSER DETECTION ===
        window.addEventListener('load', function() {
            var userAgent = navigator.userAgent || navigator.vendor || window.opera;
            var isWhatsApp = /WhatsApp/i.test(userAgent);
            var isFacebook = /FBAN|FBAV/i.test(userAgent);
            var isInstagram = /Instagram/i.test(userAgent);
            
            if (isWhatsApp || isFacebook || isInstagram) {
                var banner = document.createElement('div');
                banner.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; background: linear-gradient(135deg, #ff006e, #7b2ff7); color: white; padding: 12px 20px; text-align: center; z-index: 9999; font-size: 14px; font-weight: 600; box-shadow: 0 4px 10px rgba(0,0,0,0.3);';
                
                var browserName = isWhatsApp ? 'WhatsApp' : (isFacebook ? 'Facebook' : 'Instagram');
                banner.innerHTML = '‚ö†Ô∏è For best experience in ' + browserName + ', tap "‚ãØ" (menu) and select "Open in Safari" or "Open in Browser"';
                
                document.body.insertBefore(banner, document.body.firstChild);
                document.body.style.paddingTop = '60px';
                
                // Auto-hide after 10 seconds
                setTimeout(function() {
                    banner.style.transition = 'opacity 1s ease';
                    banner.style.opacity = '0';
                    setTimeout(function() {
                        banner.remove();
                        document.body.style.paddingTop = '0';
                    }, 1000);
                }, 10000);
            }
        });
    </script>
</body>
</html>
